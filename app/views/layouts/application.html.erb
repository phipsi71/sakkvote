<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "SAKKvote" %></title>
    <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Open+Sans:300,300italic" %>
</head>

<body><%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>
    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag 'favicon.ico', rel: 'shortcut icon' %>
  

    <div class="container">
      <div class="row">
        
        <div class="col-sm-9 col-md-9">
          <div class="spacer-small row">
            <%= image_tag ('sakkvote.png')  %>
          </div>
          <%= yield %>
        </div>
      </div>

      <footer class="spacer-small small">
        <%= bootstrap_flash %>
        <p>Â© SAKK 2014</p>
      </footer>

    </div>

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>


  
</body>
</html>