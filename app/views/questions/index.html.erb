<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table">
  <thead>
    <tr>
      <!--th><%= model_class.human_attribute_name(:id) %></th-->
      <th><%= model_class.human_attribute_name(:poke) %></th>
      <th><%= model_class.human_attribute_name(:is_active) %></th>
      <th></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <!--td><%= link_to question.id, question_path(question) %></td-->
        <td><%= link_to question.poke, question_path(question)  %></td>
        <!--the following td contains a conditional formatting-->
        <td class="<%= 'bla' if question.is_active %>"><%= question.is_active %></td>
        <td><%= link_to 'Make Active', activequestion_path(question), :class => 'btn btn-mini' %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_question_path(question), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      question_path(question),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_question_path,
            :class => 'btn btn-primary' %>
